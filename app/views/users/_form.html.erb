<% if @user.errors.any? %>
<div class="row">
<div class="col-xs-8 col-xs-offset-2">
	<div class="alert alert-danger" role="alert">
	<ul>
		<% @user.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
	</ul>
	</div>
</div>

</div>
	
<% end %>
<div class="row">
	<div class="col-sm-10 col-sm-offset-1">
		<%= form_for @user do |f| %>
			<div class="form-group">
				<%= f.label :username %>
				<%= f.text_field :username, class: "form-control", autofocus: true, placeholder: "Enter username" %><br>
			</div>

			<div class="form-group">
				<%= f.label :email %>
				<%= f.email_field :email, class: "form-control", placeholder: "Enter email" %><br>
			</div>

			<div class="form-group">
				<%= f.label :password %>
				<%= f.password_field :password, class: "form-control", autofocus: true, placeholder: "Enter password" %><br>
			</div>
			<%= f.submit(@user.new_record? ? "Sign Up" : "Update User" ,  class: "btn btn-info") %>
	<% end %>
	</div>
	<div class="col-sm-4 col-sm-offset-4" >
		[<%= link_to 'Cancel request and return to articles listing', articles_path %>]
	</div>
</div>

	

