<% if @article.errors.any? %>
	<ul>
		<% @article.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
	</ul>
<% end %>
<div class="row">
	<div class="col-sm-10 col-sm-offset-1">
		<%= form_for @article do |f| %>
			<div class="form-group">
				<%= f.label :title %>
				<%= f.text_field :title, class: "form-control", autofocus: true, placeholder: "Title of article" %><br>
			</div>
			<div class="form-group">
				<%= f.label :description %>
				<%= f.text_area :description, class: "form-control", placeholder: "Content of the article", rows: 10  %><br>
			</div>
			<%= f.submit class: "btn btn-info" %> | <%= link_to 'back', articles_path, class: "btn btn-default btn-sm" %>
	<% end %>
	</div>
</div>

	

