<h1>All articles</h1>

<table class="table table-condensed" >
	<thead>
		<tr>
			<th>Title</th>
			<th>Description</th>
		</tr>
	</thead>
	<tbody>
	<% @articles.each do |article| %>
		<tr>
			<td><%= article.title %></td>
			<td><%= article.description %></td>
			<td><%= link_to 'edit', edit_article_path(article), class: "btn btn-warning btn-sm " %></td>
			<td><%= link_to 'show', article, class: "btn btn-info btn-sm" %></td>
			<td><%= link_to 'delete', article, method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger btn-sm" %></td>
		
		</tr>
	</tbody>
	<% end %>
</table>
<%= link_to 'new article', new_article_path, class: "btn btn-default btn-sm"%>
