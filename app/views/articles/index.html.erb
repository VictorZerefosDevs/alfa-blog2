<h1 class="text-center">Listing all articles</h1>
<div align="center" >
	<%= will_paginate %>
</div>
	<div class="row">
		<div class="col-xs-8 col-xs-offset-2">
		<% @articles.each do |article| %>
			<div class="panel panel-primary ">
				<div class="panel-heading">
					<h3 class="panel-title">Title: <%= article.title %></h3>
				</div>
				<div class="panel-body">
    			<%= article.description %>
    			<div class="article-details">
	    				<small><i class="fa fa-user" aria-hidden="true"></i>  
	    						<%= article.user.username if article.user %> 
	    						<i class="fa fa-clock-o" aria-hidden="true"></i> 
	    						<%= time_ago_in_words(article.created_at) %> ago, 
	    				</small> 
    			</div>
  			</div>
  			<div class="panel-footer">
  				<%= link_to 'edit', edit_article_path(article), class: "btn btn-warning btn-xs " %>
					<%= link_to 'show', article, class: "btn btn-info btn-xs" %>
					<%= link_to 'delete', article, method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger btn-xs" %>
  			</div>
					
			</div>
			<% end %>
			<%= link_to 'new article', new_article_path, class: "btn btn-default btn-sm"%>
		</div>
	</div>
			
	<div align="center" >
	<%= will_paginate %>
</div>


